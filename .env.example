# ============================================
# Multi-LLM RAG Agent Configuration
# ============================================
# Copy this file to .env and fill in your API keys

# ============================================
# API Keys (Required)
# ============================================

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
# Used by: LangChain.py, LangGraph.py, RAG-Agent.py, Multi-LLM-RAG-Agent.py
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini/Veo Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
# Used by: VeoVideoGeneration.py, Gemini-Flash-Image-(Nano Banana)(text-to-image).py, Image-editing-(text-and-image-to-image).py
GOOGLE_API_KEY=your-google-api-key-here

# Claude/Anthropic Configuration
# Get your API key from: https://console.anthropic.com/settings/keys
# Used by: Claude.py (PDF to Text extractor)
CLAUDE_API_KEY=sk-ant-your-claude-api-key-here

# ============================================
# Model Configuration (Optional)
# ============================================

# OpenAI Models
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Google Models
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image
VEO_VIDEO_MODEL=veo-3.1-generate-preview

# Claude Models
CLAUDE_MODEL=claude-3-5-haiku-20241022

# ============================================
# RAG Configuration
# ============================================
DEFAULT_DOCUMENT=VIVEK-VISHWAKARMA-RESUME.md
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ============================================
# Output Configuration
# ============================================
IMAGE_OUTPUT_DIR=generated_images
VIDEO_OUTPUT_DIR=generated_videos

# ============================================
# Logging (DEBUG, INFO, WARNING, ERROR)
# ============================================
LOG_LEVEL=INFO
